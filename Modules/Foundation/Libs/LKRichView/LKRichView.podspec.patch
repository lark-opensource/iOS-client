debug_dependency 'SnapKit'

debug_fastlane do
    lane :unit_test, <<-'LANE'
    proj_name = 'LKRichViewDev'
    workspace = "#{proj_name}.xcworkspace"
    begin
        scan(
            scheme: proj_name,
            clean: false,
            code_coverage: true,
            output_types: 'html,junit',
            output_directory: 'fastlane/test_reports',
            workspace: workspace,
            devices: ['iPhone 8 Plus (11.0.1)'],
            # only_testing: 'test**'
        )
    rescue => exception
        on_error("❌ Fail Lane unit_test 🚩", exception)
        UI.user_error! exception
    end

    slather(
        output_directory: "fastlane/test_outputs",
        proj: "#{proj_name}.xcodeproj",
        workspace: workspace,
        scheme: proj_name,
        html: true,
        ignore: ['../../Libs/LKRichView/app/app/src/**'],
        source_directory: "Pods/LKRichView"
    )

