load './AutoGenerated/BasePodfile'

# 建议使用 `lark_demo` 来进行配置。See more: http://py/ios-lark-demo

### demo configuration
lark_demo.use_strict_lock!
lark_demo.disable_swiftlint!
lark_demo.config_binary(strategy: :all) do
  %w[
    LarkClean
    LarkCleanAssembly
    LarkStorage
    LarkStorageAssembly
  ].each { |v| source v }
end

lark_demo.base_setup

target 'LarkCleanDev' do
  lark_demo.use_if_pods!

  pod 'LarkClean', :path => '../../Libs/LarkClean'
  pod 'LarkCleanAssembly', :path => '../../Libs/LarkCleanAssembly'

  # base pods
  pod 'BootManager'
  pod 'AppContainer'
  pod 'LarkAssembler'
  pod 'LarkContainer'
  pod 'LKLoadable'
  pod 'PassportDebug'

  target 'LarkCleanDevTests' do
    inherit! :search_paths
  end
end

# @param installer [Pod::Installer]
pre_install do |installer|
  lark_demo.base_pre_install installer
end

# @param installer [Pod::Installer]
post_install do |installer|
  lark_demo.base_post_install installer
end

lark_demo.base_flush
